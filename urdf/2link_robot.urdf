<robot name="2link_robot">
	
	<material name="black">
		<color rgba="0 0 0 0.7"/>
	</material>
	<material name="white">
		<color rgba="1 1 1 0.7"/>
	</material>

	<link name="base_link">
		<visual>
			<geometry>
				<box size="0.7 .05 .05"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0.35 0 0"/>
			<material name="black"/>
		</visual>
	</link>

	<link name="second_link">
		<visual>
			<geometry>
				<box size="0.7 .05 .05"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0.35 0 0"/>
			<material name="white"/>
		</visual>
	</link>

	<joint name="joint1" type="continuous">
		<axis rpy="0 0 0" xyz="0 0 1"/>
		<parent link="base_link"/>
		<child link="second_link"/>
		<origin rpy="0 0 0" xyz="0.7 0 0"/>
	</joint>

	<link name="pseudo_link"/>

	<joint name="ee" type="fixed">
		<parent link="second_link"/>
		<child link="pseudo_link"/>
		<origin rpy="0 0 0" xyz="0.7 0 0"/>
	</joint>

</robot>


